{
    "name": "litepie/roles",
    "description": "A Laravel package for role management system",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Litepie Team",
            "email": "hello@litepie.com"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/auth": "^12.0",
        "illuminate/console": "^12.0",
        "illuminate/contracts": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^9.0|^10.0|^11.0",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Roles\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Roles\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Roles\\RolesServiceProvider"
            ],
            "aliases": {
                "Role": "Litepie\\Roles\\Models\\Role"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}